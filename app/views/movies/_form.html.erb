<%= form_with(model: movie, local: true) do |form| %>
  <% if movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
      <% movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :movie_title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :movie_description %>
  </div>

  <div class="field">
    <%= form.label :duration %>
    <%= form.number_field :duration, id: :movie_duration %>
  </div>

  <div class="field">
    <%= form.label :director_id %>
    <%= form.select :director_id, options_for_select(Director.all.map{|s|[s.first_name + " " + s.last_name, s.id]}), id: :movie_director_id %>
  </div>

  <div class="field">
    <%= form.label :release_date %>
    <%= form.datetime_select :release_date, id: :movie_release_date %>
  </div>

  <div class="field">
    <%= form.label :address_id %>
    <%= form.select :address_id, options_for_select(Address.all.map{|s|["Street: " + s.street + " Zipcode: " + s.zipcode, s.id]}), id: :movie_address_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
